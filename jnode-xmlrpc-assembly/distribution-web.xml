<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>${buildNumber}</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <moduleSets>
        <moduleSet>

            <useAllReactorProjects>true</useAllReactorProjects>

            <includes>
                <include>jnode-xmlrpc:jnode-xmlrpc-web</include>
            </includes>
            <binaries>
                <outputDirectory>jnode/lib</outputDirectory>
                <unpack>false</unpack>
                <dependencySets>
                    <dependencySet>
                        <unpack>false</unpack>
                        <scope>runtime</scope>
                        <outputDirectory>jnode/lib</outputDirectory>
                    </dependencySet>
                </dependencySets>
            </binaries>
        </moduleSet>
    </moduleSets>

    <fileSets>
        <fileSet>
            <directory>${basedir}/../jnode-xmlrpc-web/target/distwar</directory>
            <outputDirectory>opt/jnode</outputDirectory>
            <includes>
                <include>*.war</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${basedir}/../jnode-xmlrpc-web/target/dependency</directory>
            <outputDirectory>opt/jnode</outputDirectory>
            <includes>
                <include>jetty-runner.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${basedir}</directory>
            <outputDirectory>opt/jnode</outputDirectory>
            <includes>
                <include>*.bat</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${basedir}</directory>
            <outputDirectory>opt/jnode</outputDirectory>
            <includes>
                <include>*.sh</include>
            </includes>
            <fileMode>0755</fileMode>
        </fileSet>
        <fileSet>
            <directory>${basedir}/config-web</directory>
            <outputDirectory>opt/jnode</outputDirectory>
            <includes>
                <include>*.properties</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>